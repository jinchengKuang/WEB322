<div class="row">
    <div class="col-md-12">
        <h2>Images</h2>
        <hr />
    </div>

    {{#if images}}
        {{#each}}
            <div class="col-md-4">
                <img src={{this}} alt="">
            </div>
        {{/each}}
    {{else}}
        <div class="col-md-12 text-center">
                <strong>No Images Available</strong>
        </div>
    {{/if}}

    <div class="col-md-4">
        <img src="/images/uploaded/1518186273491.jpg" class="img-responsive img-thumbnail" />
    </div>
</div>